.footer-head {
  display: flex;
  justify-content: center;
  margin: 20rpx 30rpx;
}

.divider {
  width: 30%;
  border-bottom: 4rpx dashed black;
  margin: 20rpx auto;
}

.center-text {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
}

.footer-body {
  display: flex;
  margin: 0 30rpx;
  justify-content: space-around;
  align-items: center;
}
.footer-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid gray;
}
.footer-role {
  text-align: center;
  font-size: 60rpx;
  font-weight: 900;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
