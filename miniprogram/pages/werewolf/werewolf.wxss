.werewolf-head {
  display: flex;
  margin: 40rpx;
  justify-content: center;
  font-size: 50rpx;
}

.l-card {
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.07), 0 4px 8px rgba(0, 0, 0, 0.07),
    0 8px 16px rgba(0, 0, 0, 0.07), 0 16px 32px rgba(0, 0, 0, 0.07), 0 32px 64px rgba(0, 0, 0, 0.07) !important;
}

.divider {
  width: 84%;
  border-bottom: 4rpx dashed black;
  margin: 20rpx auto;
}

.werewolf-body {
  margin-bottom: 40rpx;
}

.edit {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 10rpx 10rpx 0;
}

.start {
  display: flex;
  justify-content: center;
  margin: 30rpx 40rpx 10rpx;
}

.start-button {
  font-size: 50rpx !important;
  color: black !important;
  /* font-weight: 600; */
}

.icon-kaishi {
  color: black;
  font-size: 60rpx;
  margin: 30rpx;
}
