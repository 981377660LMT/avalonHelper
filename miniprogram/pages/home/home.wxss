/**index.wxss**/

.black-container {
  width: 100%;
  height: 300rpx;
  /* background-color: black; */
  background-image: url(data:image/png;base64,);
  background-position: 0rpx -100rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  background-color: black;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.12), 0 2px 2px rgba(0, 0, 0, 0.12), 0 4px 4px rgba(0, 0, 0, 0.12),
    0 8px 8px rgba(0, 0, 0, 0.12), 0 16px 16px rgba(0, 0, 0, 0.12);
  z-index: -1;
}

.black-padding {
  width: 100%;
  height: 100rpx;
  position: absolute;
  background-color: black;
  z-index: -1;
}

.white-container {
  width: 100%;
  height: 100%;
  border-top-left-radius: 16rpx 16rpx;
  border-top-right-radius: 16rpx 16rpx;
  background-color: #f4f5f5;
  z-index: 999;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: black;
  font-size: 54rpx;
}

.userinfo-avatar-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 220rpx;
  background-color: #f4f5f5;
  margin-top: -110rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.12), 0 2px 2px rgba(0, 0, 0, 0.12), 0 4px 4px rgba(0, 0, 0, 0.12),
    0 8px 8px rgba(0, 0, 0, 0.12), 0 16px 16px rgba(0, 0, 0, 0.12);
}

.name {
  width: 90%;
  text-align: center;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.enter-button-group {
  position: absolute;
  top: 74%;
  left: 50%;
  transform: translate(-50%, -50%);
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
}

.enter-button {
  font-size: 50rpx !important;
  color: black !important;
  margin-bottom: 120rpx;
  padding: 40rpx !important;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.07), 0 4px 8px rgba(0, 0, 0, 0.07),
    0 8px 16px rgba(0, 0, 0, 0.07), 0 16px 32px rgba(0, 0, 0, 0.07), 0 32px 64px rgba(0, 0, 0, 0.07);
}

.iconfont {
  color: black;
  font-size: 70rpx;
  margin-right: 30rpx;
}
