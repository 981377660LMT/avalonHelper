.board-head {
  display: flex;
  margin: 40rpx;
  justify-content: center;
  font-size: 50rpx;
}

.l-card {
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.07), 0 4px 8px rgba(0, 0, 0, 0.07),
    0 8px 16px rgba(0, 0, 0, 0.07), 0 16px 32px rgba(0, 0, 0, 0.07), 0 32px 64px rgba(0, 0, 0, 0.07) !important;
  min-height: 800rpx;
  margin-bottom: 20rpx;
}

