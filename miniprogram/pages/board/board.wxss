.board-body-header {
  margin-top: -40rpx;
  font-size: 40rpx;
}

.board-body-header .text {
  margin-bottom: 10rpx;
}

.user-item {
  position: relative;
  width: 250rpx;
  background-color: pink !important;
  transform: perspective(1000rpx);
  -webkit-transform: perspective(1000rpx);
  -moz-transform: perspective(1000rpx);
  -ms-transform: perspective(1000rpx);
  -o-transform: perspective(1000rpx);
}

.rotate {
  transform: rotateY(180deg);
  -webkit-transform: rotateY(180deg);
  -moz-transform: rotateY(180deg);
  -ms-transform: rotateY(180deg);
  -o-transform: rotateY(180deg);
}

.user-item-front {
  /*position: absolute;
  */
  width: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  transform: rotateY(0deg);
  -webkit-transform: rotateY(0deg);
  -moz-transform: rotateY(0deg);
  -ms-transform: rotateY(0deg);
  -o-transform: rotateY(0deg);
}

.user-item-back {
  /* position: absolute; */
  background-color: skyblue;
  width: 100%;
}

.avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.08), 0 2px 2px rgba(0, 0, 0, 0.12), 0 4px 4px rgba(0, 0, 0, 0.16),
    0 8px 8px rgba(0, 0, 0, 0.2);
}

.info {
  max-width: 250rpx;
}

.info .text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx;
  font-size: 24rpx;
}

.role {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 40rpx;
  margin-top: 20rpx;
  /* font-weight: bold; */
}

.loading {
  display: flex;
  justify-content: center;
  height: 200rpx;
  margin-top: 50rpx;
  align-items: center;
  color: black;
  /* background-color: pink; */
}

.loading-text {
  position: relative;
  left: 40rpx;
  font-size: 40rpx;
}

.help {
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  z-index: 99;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.07), 0 2px 4px rgba(0, 0, 0, 0.07), 0 4px 8px rgba(0, 0, 0, 0.07),
    0 8px 16px rgba(0, 0, 0, 0.07), 0 16px 32px rgba(0, 0, 0, 0.07), 0 32px 64px rgba(0, 0, 0, 0.07);
}

.popup-title {
  font-size: 40rpx !important;
  margin-bottom: 20rpx;
  padding: 0;
}

.popup-body {
  margin-top: 10rpx;
}

.big-block {
  line-height: 1.6em;
  font-size: 40rpx;
  font-weight: 600;
}

.block {
  display: block;
  line-height: 1.6em;
}
